<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:id="@+id/top_stories_item_relativelayout">
    <ImageView
        android:layout_width="@dimen/widthImageRecycler"
        android:layout_height="@dimen/heightImagerecycler"
        android:id="@+id/top_stories_item_image"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/contentDescription_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/top_stories_item_image"
        android:id="@+id/top_stories_item_section"
        android:textStyle="bold"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/top_stories_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/top_stories_item_image"
        android:layout_centerVertical="true"
        android:layout_alignStart="@id/top_stories_item_title"/>

    <TextView
        android:id="@+id/top_stories_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/top_stories_item_section"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:textColor="#000"/>

    <View
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignStart="@id/top_stories_item_title"
        android:layout_below="@id/top_stories_item_image"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>
